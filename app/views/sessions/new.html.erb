<%= render "books/nav", locals: { user: @user } %>

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-6">

    <h1>login</h1>

    <% flash.each do |k,v| %>
    <div class="alert alert-danger" role="alert">
      <p id="<%= k %>"><%= v %></p>
    </div>
    <% end %>

    <!-- login form -->
    <%= form_for :user do |f| %>
      <div class="form-group">
        <%= f.label :email %>:
        <%= f.email_field :email, class: "form-control", :autofocus => true  %>
      </div>
      <div class="form-group">
        <%= f.label :password  %>:
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "form-control btn btn-success" %>
      </div>
    <% end %>

    <%= link_to "Create an account!", signup_path %>

    </div>
  </div>
</div>