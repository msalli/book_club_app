<%= render "books/nav", locals: { user: @user }  %>

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2">
      <h1>join book club</h1>

      <!-- new user form -->
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field  :first_name, class: "form-control", :autofocus => true %>
      </div>
      <div class='form-group'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%=  f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image_url, "Profile picture" %>
        <%= f.text_field :image_url, :placeholder => "URL", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save!", class: "form-control btn btn-success" %>
      </div>
      <% end %>

    </div>
  </div>
</div>