<%= render "nav", locals: { user: @user } %>
<%= render "header"  %>
 <div class="panel-body">
    <% flash.each do |k, v|%>
      <div class="alert alert-success" role="alert">
        <p id="<%= k %>"><%= v %></p>
      </div>
    <% end %>

    <!-- search modal -->
    <div class="modal" id="myModal">
      <div class="modal-dialog">
         <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Results:</h4>
          </div>
          <div class="modal-body">
            <p class="error"></p>
            <p class="book-title"></p>
            <p class="book-author"></p>

            <!-- this form searches using the amazon api -->
            <%= form_for @book do |f| %>
            <div class="form-group">
              <%= f.text_field :title, class: "search-az form-control", placeholder: "Search it on Amazon" %>
            </div>
            <div class="form-group">
              <%= f.submit "Search Book", class: "btn btn-default"%>
            </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" id="modal-read">I've Read It!</button>
            <button type="button" class="btn btn-warning" id="modal-queue">Add to Queue</button>
          </div>
        </div>
      </div>
    </div>

    <div class="row-center">
      <div class="col-xs-12 books">
        <!-- all books, with code for fancy box popup -->
        <% @books.each do |book| %>
         <a class="fancybox" title="<h4><%= book.title %></h4><h5>Written by: <%= book.author %></h5><a href='/books/<%= book.id %>'>See More...</a>" rel="group" href="<%= book.lg_img %>"><img class="book" src="<%= book.lg_img %>"></a>
        <% end %>
      </div>
    </div>



  </div>
